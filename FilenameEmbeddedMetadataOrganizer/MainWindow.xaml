<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FilenameEmbeddedMetadataOrganizer;assembly=FilenameEmbeddedMetadataOrganizer"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FilenameEmbeddedMetadataOrganizer.ViewModels;assembly=FilenameEmbeddedMetadataOrganizer"
        Title="MainWindow"
        Width="1200"
        Height="800"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{StaticResource MaterialDesignFont}"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Height="25"
                         Margin="5"
                         materialDesign:HintAssist.Hint="Base Directory"
                         Text="{Binding BaseDirectory.Value, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="NoWrap" />
                <Button Grid.Column="1"
                        Width="30"
                        Margin="5"
                        Padding="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="SelectFolder_Click"
                        Content="…" />
            </Grid>
            <ListBox Grid.Row="1"
                     Margin="5"
                     ItemsSource="{Binding Directories}"
                     SelectedItem="{Binding SelectedDirectory.Value}" />
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Height="25"
                         Margin="5"
                         materialDesign:HintAssist.Hint="Search"
                         Text="{Binding SearchString.Value, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="NoWrap" />
                <CheckBox Grid.Column="1"
                          Margin="0,0,5,0"
                          Content="From root"
                          IsChecked="{Binding SearchFromBaseDirectory.Value}" />
            </Grid>

            <ListBox x:Name="Files"
                     Grid.Row="3"
                     Margin="5"
                     DisplayMemberPath="Name"
                     ItemsSource="{Binding Files}"
                     SelectedItem="{Binding SelectedFile.Value}" />
        </Grid>

        <GridSplitter Grid.Column="1"
                      Width="5"
                      VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext" />

        <GroupBox Grid.Column="2"
                  Margin="10"
                  Header="GroupBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="OriginalName"
                               Grid.Row="0"
                               Grid.Column="0"
                               Height="25"
                               Text="{Binding OriginalFileName.Value}"
                               TextWrapping="NoWrap" />

                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            Command="{Binding OpenCommand}"
                            CommandParameter="{Binding ElementName=Files, Path=SelectedItem}"
                            Content="Open" />

                    <WrapPanel Grid.Row="1"
                               Grid.Column="0"
                               Margin="0,5"
                               Orientation="Horizontal">
                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Treat parenthesized part as names"
                                  IsChecked="{Binding TreatParenthesizedPartAsNames.Value}" />

                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Fix up names in main part"
                                  IsChecked="{Binding FixupNamesInMainPart.Value}" />

                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Replace underscores"
                                  IsChecked="{Binding ReplaceUnderscores.Value}" />

                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Detect names in main and names parts"
                                  IsChecked="{Binding DetectNamesInMainAndNamesParts.Value}" />
                    </WrapPanel>

                    <Button Grid.Row="1"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            Margin="0,5"
                            Command="{Binding OpenExplorerCommand}"
                            CommandParameter="{Binding ElementName=Files, Path=SelectedItem}"
                            Content="Explorer" />

                    <TextBox x:Name="NewName"
                             Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Height="25"
                             Text="{Binding NewFileName.Value}"
                             TextWrapping="NoWrap" />
                </Grid>

                <Grid Grid.Row="1"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0"
                              Margin="2"
                              Header="Replace">
                        <ListBox />
                    </GroupBox>
                    <GroupBox Grid.Row="1"
                              Margin="2"
                              Header="Destination Directory">
                        <ListBox DisplayMemberPath="Name"
                                 ItemsSource="{Binding DestinationDirectories}"
                                 SelectedItem="{Binding SelectedDestinationDirectory.Value}" />
                    </GroupBox>
                </Grid>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="2"
                          Header="Names">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="NewNameToAdd"
                                     Grid.Column="0"
                                     Margin="2"
                                     materialDesign:HintAssist.Hint="Add Name"
                                     Text="{Binding NewNameToAdd.Value, UpdateSourceTrigger=PropertyChanged}" />

                            <Button Grid.Column="1"
                                    Width="15"
                                    Height="15"
                                    Margin="5,0"
                                    Padding="0,-1,-1,0"
                                    Command="{Binding AddNameCommand}"
                                    CommandParameter="{Binding ElementName=NewNameToAdd, Path=Text}"
                                    Content="+" />
                        </Grid>

                        <ItemsControl Grid.Row="1"
                                      Background="{DynamicResource MaterialDesignPaper}"
                                      ItemsSource="{Binding Names}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="viewModels:NameViewModel">
                                    <CheckBox Margin="0,3"
                                              Foreground="{StaticResource MaterialDesignBody}"
                                              IsChecked="{Binding IsSelected}">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsNew}"
                                                                 Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SecondaryAccentBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="5,0,15,0"
                                                       HorizontalAlignment="Stretch"
                                                       Text="{Binding Name}" />
                                            <Button Width="12"
                                                    Height="12"
                                                    Margin="0,0,5,0"
                                                    Padding="0,-5,0,-4"
                                                    Command="{Binding ClearNewFlagCommand}"
                                                    Content="+"
                                                    Visibility="{Binding IsNew, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </StackPanel>
                                    </CheckBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="1"
                          Grid.Column="2"
                          Margin="2"
                          Header="Features">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="AddFeatureRoot"
                                      Grid.Column="0"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding AddFeatureRoot.Value}" />

                            <TextBox Grid.Column="1"
                                     Margin="2"
                                     Text="{Binding FeatureToAdd.Value, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignTextBox}"
                                           TargetType="TextBox">
                                        <Setter Property="materialDesign:HintAssist.Hint" Value="Instance Name" />

                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=AddFeatureRoot, Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="materialDesign:HintAssist.Hint" Value="Feature Name" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBox Grid.Column="2"
                                     Margin="2"
                                     Text="{Binding FeatureCodeToAdd.Value, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignTextBox}"
                                           TargetType="TextBox">
                                        <Setter Property="materialDesign:HintAssist.Hint" Value="Instance Code" />

                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=AddFeatureRoot, Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="materialDesign:HintAssist.Hint" Value="Feature Code" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Grid.Column="3"
                                    Width="15"
                                    Height="15"
                                    Margin="5,0"
                                    Padding="0,-1,-1,0"
                                    Command="{Binding AddFeatureCommand}"
                                    Content="+"
                                    Foreground="{DynamicResource SecondaryAccentForegroundBrush}" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TreeView x:Name="Features"
                                      Grid.Row="0"
                                      ItemsSource="{Binding Features}"
                                      SelectedItemChanged="Features_SelectedItemChanged"
                                      SelectedValuePath="">
                                <TreeView.Resources>
                                    <HierarchicalDataTemplate x:Key="FeatureRootDataTemplate"
                                                              DataType="viewModels:FeatureViewModel"
                                                              ItemsSource="{Binding Instances}">
                                        <TextBlock Foreground="{StaticResource SecondaryAccentForegroundBrush}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} ({1})">
                                                    <Binding Path="FeatureName" />
                                                    <Binding Path="FeatureCode" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </HierarchicalDataTemplate>
                                    <HierarchicalDataTemplate x:Key="FeatureInstanceDataTemplate"
                                                              DataType="viewModels:FeatureInstanceViewModel"
                                                              ItemsSource="{Binding Instances}">
                                        <CheckBox Margin="0,3"
                                                  IsChecked="{Binding IsSelected}">
                                            <TextBlock Foreground="{StaticResource SecondaryAccentForegroundBrush}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}: ({1})">
                                                        <Binding Path="InstanceName" />
                                                        <Binding Path="InstanceCode" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </CheckBox>
                                    </HierarchicalDataTemplate>
                                </TreeView.Resources>
                                <TreeView.ItemTemplateSelector>
                                    <local:FeaturesTreeViewItemTemplateSelector FeatureInstanceTemplate="{StaticResource FeatureInstanceDataTemplate}"
                                                                                FeatureRootTemplate="{StaticResource FeatureRootDataTemplate}" />
                                </TreeView.ItemTemplateSelector>
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="IsExpanded" Value="True" />
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding SelectedFeatureInstances}" />
                        </Grid>
                    </Grid>
                </GroupBox>

                <Grid Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ResultingFilePath"
                               Grid.Column="0"
                               Height="25"
                               Text="{Binding ResultingFilePath.Value}"
                               TextWrapping="NoWrap" />
                    <Button Grid.Column="1"
                            Width="100"
                            Height="30"
                            Content="Apply" />
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
