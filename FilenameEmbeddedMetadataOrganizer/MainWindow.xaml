<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FilenameEmbeddedMetadataOrganizer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FilenameEmbeddedMetadataOrganizer.ViewModels;assembly=FilenameEmbeddedMetadataOrganizer"
        Title="MainWindow"
        Width="1200"
        Height="800"
        mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <TextBox Grid.Row="0"
                         Width="120"
                         Height="23"
                         Margin="5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text="{Binding BaseDirectory, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="NoWrap" />
                <Button Grid.Row="0"
                        Width="75"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
            </StackPanel>
            <ListBox Grid.Row="1"
                     Margin="5"
                     ItemsSource="{Binding Directories}"
                     SelectedItem="{Binding SelectedDirectory}" />
            <TextBox Grid.Row="2"
                     Height="25"
                     Margin="5"
                     Text=""
                     TextWrapping="NoWrap" />
            <ListBox x:Name="Files"
                     Grid.Row="3"
                     Margin="5"
                     DisplayMemberPath="Name"
                     ItemsSource="{Binding Files}"
                     SelectedItem="{Binding SelectedFile}" />
        </Grid>

        <GridSplitter Grid.Column="1"
                      Width="5"
                      VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext" />

        <GroupBox Grid.Column="2"
                  Margin="10"
                  Header="GroupBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="OriginalName"
                               Grid.Row="0"
                               Grid.Column="0"
                               Height="25"
                               Text="{Binding OriginalFileName}"
                               TextWrapping="NoWrap" />

                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            Command="{Binding OpenCommand}"
                            CommandParameter="{Binding ElementName=Files, Path=SelectedItem}"
                            Content="Open" />

                    <WrapPanel Grid.Row="1"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Margin="0,5"
                               Orientation="Horizontal">
                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Treat parenthesized part as names"
                                  IsChecked="{Binding TreatParenthesizedPartAsNames}" />

                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Fix up names in main part"
                                  IsChecked="{Binding FixupNamesInMainPart}" />

                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Replace underscores"
                                  IsChecked="{Binding ReplaceUnderscores}" />

                        <CheckBox Height="23"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="Detect names in main and names parts"
                                  IsChecked="{Binding DetectNamesInMainAndNamesParts}" />
                    </WrapPanel>

                    <TextBox x:Name="NewName"
                             Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Height="25"
                             Text="{Binding NewFileName}"
                             TextWrapping="NoWrap" />
                </Grid>

                <Grid Grid.Row="1"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0"
                              Header="Replace">
                        <ListBox />
                    </GroupBox>
                    <GroupBox Grid.Row="1"
                              Header="Destination Directory">
                        <ListBox DisplayMemberPath="Name"
                                 ItemsSource="{Binding DestinationDirectories}"
                                 SelectedItem="{Binding SelectedDestinationDirectory}" />
                    </GroupBox>
                </Grid>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Header="Names">
                    <ListBox />
                </GroupBox>
                <GroupBox Grid.Row="1"
                          Grid.Column="2"
                          Header="Features">
                    <TreeView />
                </GroupBox>

                <Grid Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ResultingFilePath"
                               Grid.Column="0"
                               Height="25"
                               Text="{Binding ResultingFilePath}"
                               TextWrapping="NoWrap" />
                    <Button Grid.Column="1"
                            Width="100"
                            Height="30"
                            Content="Apply" />
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
