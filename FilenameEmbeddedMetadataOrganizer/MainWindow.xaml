<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FilenameEmbeddedMetadataOrganizer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FilenameEmbeddedMetadataOrganizer.ViewModels;assembly=FilenameEmbeddedMetadataOrganizer"
        Title="MainWindow"
        Width="1200"
        Height="800"
        mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <TextBox Grid.Row="0"
                         Width="120"
                         Height="23"
                         Margin="5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text="{Binding BaseDirectory, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="NoWrap" />
                <Button Grid.Row="0"
                        Width="75"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
            </StackPanel>
            <ListBox Grid.Row="1"
                     Margin="5"
                     ItemsSource="{Binding Directories}"
                     SelectedItem="{Binding SelectedDirectory}" />
            <TextBox Grid.Row="2"
                     Width="120"
                     Height="23"
                     Margin="5"
                     Text=""
                     TextWrapping="NoWrap" />
            <ListBox Grid.Row="3"
                     Margin="5"
                     DisplayMemberPath="Name"
                     ItemsSource="{Binding Files}"
                     SelectedItem="{Binding SelectedFile}" />
        </Grid>

        <GroupBox Grid.Column="1"
                  Margin="10"
                  Header="GroupBox">
            <Grid Margin="2,0,-2,0">
                <TextBox x:Name="OriginalName"
                         Width="120"
                         Height="23"
                         Margin="42,20,648,684"
                         Text="OriginalName"
                         TextWrapping="NoWrap" />
                <TextBox x:Name="NewName"
                         Width="120"
                         Height="23"
                         Margin="42,62,648,642"
                         RenderTransformOrigin="0.1,-2.696"
                         Text="NewName"
                         TextWrapping="NoWrap" />
                <CheckBox Width="100"
                          Height="25"
                          Margin="226,22,484,680"
                          Content="Clear existing" />
                <TreeView Width="200"
                          Height="200"
                          Margin="481,44,129,483" />

                <ListBox Width="200"
                         Height="200"
                         Margin="481,290,129,237" />
                <ListBox Width="200"
                         Height="200"
                         Margin="152,264,458,263" />
                <Button Width="100"
                        Height="30"
                        Margin="313,540,397,157"
                        Content="Apply" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>