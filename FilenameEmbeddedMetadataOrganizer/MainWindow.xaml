<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FilenameEmbeddedMetadataOrganizer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FilenameEmbeddedMetadataOrganizer.ViewModels;assembly=FilenameEmbeddedMetadataOrganizer"
        Title="MainWindow"
        Width="1200"
        Height="800"
        mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <TextBox Grid.Row="0"
                         Width="120"
                         Height="23"
                         Margin="5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text="{Binding BaseDirectory, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="NoWrap" />
                <Button Grid.Row="0"
                        Width="75"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
            </StackPanel>
            <ListBox Grid.Row="1"
                     Margin="5"
                     ItemsSource="{Binding Directories}"
                     SelectedItem="{Binding SelectedDirectory}" />
            <TextBox Grid.Row="2"
                     Width="120"
                     Height="23"
                     Margin="5"
                     Text=""
                     TextWrapping="NoWrap" />
            <ListBox x:Name="Files"
                     Grid.Row="3"
                     Margin="5"
                     DisplayMemberPath="Name"
                     ItemsSource="{Binding Files}"
                     SelectedItem="{Binding SelectedFile}" />
        </Grid>

        <GroupBox Grid.Column="1"
                  Margin="10"
                  Header="GroupBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="OriginalName"
                                 Grid.Row="0"
                                 Grid.Column="0"
                                 Height="25"
                                 Text="{Binding OriginalFileName}"
                                 TextWrapping="NoWrap" />
                        <CheckBox Grid.Row="0"
                                  Grid.Column="1"
                                  Width="100"
                                  Height="25"
                                  VerticalAlignment="Center"
                                  Content="Clear existing" />

                        <TextBox x:Name="NewName"
                                 Grid.Row="1"
                                 Grid.Column="0"
                                 Height="25"
                                 Text="{Binding NewFileName}"
                                 TextWrapping="NoWrap" />
                    </Grid>
                </StackPanel>

                <ListBox Grid.Row="1"
                         Grid.Column="0"
                         Width="200"
                         Height="200" />

                <ListBox Grid.Row="1"
                         Grid.Column="1"
                         Width="200"
                         Height="200" />
                <TreeView Grid.Row="1"
                          Grid.Column="2"
                          Width="200"
                          Height="200" />

                <Button Grid.Row="2"
                        Grid.Column="0"
                        Width="100"
                        Height="30"
                        Command="{Binding OpenCommand}"
                        CommandParameter="{Binding ElementName=Files, Path=SelectedItem}"
                        Content="Open" />

                <Button Grid.Row="2"
                        Grid.Column="2"
                        Width="100"
                        Height="30"
                        Content="Apply" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>